{
  "name": "static-project-template",
  "version": "0.0.1",
  "description": "Simple project template with LESS, Autoprefixer and livereload.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "gulp",
    "dev": "gulp",
    "prod": "gulp prod",
    "format": "prettier --single-quote --no-semi --write **/*.js",
    "install": "node ./bin/install.js",
    "uninstall": "node ./bin/uninstall.js",
    "lint": "eslint src && stylelint src/less/*.less",
    "precommit": "npm run lint"
  },
  "author": "Evgeniy Nedilko",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.18.11",
    "eslint": "^3.19.0",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-ejs": "^3.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-util": "^3.0.8",
    "husky": "^0.14.3",
    "stylelint": "^7.13.0"
  },
  "dependencies": {
    "gulp": "^3.9.1",
    "gulp-less": "^3.3.0",
    "install": "^0.10.1",
    "jquery": "^3.2.1",
    "normalize.css": "^7.0.0"
  }
}
